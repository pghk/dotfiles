# vim: ft=bash

# Set all padding and gaps to 6pt (default: 0)
yabai -m config top_padding    8
yabai -m config bottom_padding 8
yabai -m config left_padding   8
yabai -m config right_padding  8
yabai -m config window_gap     8

# Floating point value between 0 and 1 (default: 0.5)
yabai -m config split_ratio 0.618

# Expos√© behaves strangely without this
yabai -m config mouse_follows_focus on

# When dropping a window in the center of another, stack instead of swap
yabai -m config mouse_drop_action stack

# Don't manage windows from these apps
EXCLUDE=(
  ".*Settings$"
  "Activity Monitor"
  "Calculator"
  "Finder"
  "Karabiner-EventViewer"
  "Messages"
  "Shottr"
  "TablePlus"
  "^Terminal Visor$"
)
for APP in ${EXCLUDE[@]}; do yabai -m rule --add app="${APP}" manage=off; done
