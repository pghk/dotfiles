{
  "title": "Mash key (hyper minus ⌘)",
  "rules": [
    {
      "manipulators": [
        {
          "description": "⇪ Caps Lock to ⇧ Shift ⌃ Control ⌥ Option",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": [
                "left_control",
                "left_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
